<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="190dp">

        <TableRow>
            <EditText android:id="@+id/Edit1"
                android:layout_span="5"
                android:hint="enter number1 :"/>
        </TableRow>

        <TableRow>
            <EditText android:id="@+id/Edit2"
                android:layout_span="5"
                android:hint="enter number2 :"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btNum0"
                android:text="0"
                />
            <Button
                android:id="@+id/btNum1"
                android:text="1"
                />
            <Button
                android:id="@+id/btNum2"
                android:text="2"
                />
            <Button
                android:id="@+id/btNum3"
                android:text="3"
                />
            <Button
                android:id="@+id/btNum4"
                android:text="4"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btNum5"
                android:text="5"
                />
            <Button
                android:id="@+id/btNum6"
                android:text="6"
                />
            <Button
                android:id="@+id/btNum7"
                android:text="7"
                />
            <Button
                android:id="@+id/btNum8"
                android:text="8"
                />
            <Button
                android:id="@+id/btNum9"
                android:text="9"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnAdd"
                android:layout_margin="5dp"
                android:layout_span="5"
                android:text="+"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnSub"
                android:layout_margin="5dp"
                android:layout_span="5"
                android:text="-"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnMul"
                android:layout_margin="5dp"
                android:layout_span="5"
                android:text="*"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnDiv"
                android:layout_margin="5dp"
                android:layout_span="5"
                android:text="/"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/res"
                android:layout_margin="5dp"
                android:layout_span="5"
                android:text="="
                android:textSize="20sp"
                />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>